{
  "license": "ISC",
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build": "anchor build",
    "test:local": "ANCHOR_PROVIDER_URL=http://localhost:8899 anchor test --provider.cluster localnet",
    "test:dev": "ANCHOR_PROVIDER_URL=https://api.devnet.solana.com anchor test --provider.cluster devnet",
    "deploy:dev": "anchor deploy --provider.cluster devnet",
    "upgrade:dev": "anchor upgrade --program-id 97i8BgDJG6yZggN2Di5UnERs6X5PqYqnkSvkMdvw1d5J ./target/deploy/signals_breakout_contracts.so --provider.cluster devnet",
    "verify:dev": "anchor verify 97i8BgDJG6yZggN2Di5UnERs6X5PqYqnkSvkMdvw1d5J --provider.cluster devnet",
    "clean": "rm -rf ./target",
    "build:clean": "anchor clean && anchor build",
    "build:wasm": "cd programs/signals_breakout_contracts/math-core && wasm-pack build --target bundler --out-dir ../pkg-wasm --features wasm",
    "idl:generate": "anchor build && anchor idl parse -f ./target/idl/range_bet_program.json -o ./target/types/range_bet_program.ts",
    "account": "anchor run account-fetch",
    "create-markets": "ts-node scripts/create-markets.ts",
    "place-bets": "ts-node scripts/place-bets.ts"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.2"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
